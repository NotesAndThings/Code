<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jarune.com.notesandthingsv4" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ClassList"
            android:label="@string/title_activity_class_list"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".CreateClass"
            android:label="@string/title_activity_create_class"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".SearchClasses"
            android:label="@string/title_activity_search_classes"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".NotesList"
            android:label="@string/title_activity_notes_list"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".AddNewNote"
            android:label="@string/title_activity_add_new_note"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".RegisterAccount"
            android:label="@string/title_activity_register_account"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".testzone"
            android:label="@string/title_activity_testzone"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".showImage"
            android:label="@string/title_activity_show_image"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
